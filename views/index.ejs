<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Usamos boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>


    <style>

    #header {
      width: 100%;
      height: 50px;
      background-color:darkslategrey;
    }

    #logotipo {
      display: block;
      margin: auto;
      width: 100%;
      max-width: 1200px;
      min-width: 500px;
    }

    #titulo {
      display: block;
      margin: auto;
      width: 50%;
      font-family: Arial, Helvetica, sans-serif;
      font-size:x-large;
      color: floralwhite;
      text-align: center;
      font-weight: bold;
      padding-bottom: 3px;
  }

		.centrado_th{text-align:center;border:1px dotted #000; padding:8px; color: white}

    #problemas {
      font-family: Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 80%;
    }
    
    #problemas td, #problemas th {
      border: 1px solid #ddd;
      padding: 8px;
    }  

    #problemas tr:nth-child(even){background-color: #f2f2f2;}
    #problemas tr:hover {background-color: #ddd;}  
    
    #problemas th {
      padding-top: 5px;
      padding-bottom: 5px;
      text-align: center;
      background-color: #171817;
      color: white;
      font-size: 12px;
    }

    #problemas tr {
      font-size: 11px;
       text-align: justify;
    }  

	</style>


    <title>IMSS Problematica - CDI / BIOMEDICO</title>
  </head>
  <body>

    <div id="container">
      <div id="header">
        <div id="titulo">PROBLEMATICA - CDI / BIOMEDICO</div>
      </div>
    </div>

    <div class="container">
        <table id="problemas" > 
            <thead>
                <tr  class="centrado_th">
                    <th width="3%" scope="col">ID</th>
                    <th width="20%" scope="col">Responsable</th>
                    <th width="34%" scope="col">Descripci√≥n</th>
                    <th width="19%"  scope="col">OOAD</th>
                    <th width="9%" scope="col">Status</th>
                    <th width="9%" scope="col">Fch Alta</th>
                    <th width="6%" scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((problems) => { %>
                    <tr>
                        <td><%= problems.CVE_OOAD_PROBLEMATICA %></td>
                        <td><%= problems.NOM_RESPONSABLE %></td>
                        <td><%= problems.DES_OTRO %></td>
                        <td><%= problems.OOAD_NOMBRE %></td>
                        <td><%= problems.STATUS %></td>
                        <td><%= problems.FEC_ALTA %></td>
                        <td>
                            <a href="/cdi/editaOOAD/<%= problems.CVE_OOAD_PROBLEMATICA %>" class="btn btn-success btn-sm">Editar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>



